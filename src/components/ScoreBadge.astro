---
import { scoreColor, scoreTextColor } from "../lib/colors";

interface Props {
  score: number;
  size?: "small" | "large";
}

const { score, size = "small" } = Astro.props;
const bg = scoreColor(score);
const fg = scoreTextColor(score);
---

<span class:list={["score-badge", `score-${size}`]} style={`background:${bg};color:${fg};`}>
  {score.toFixed(1)}
</span>

<style>
  .score-badge {
    display: inline-block;
    font-weight: 700;
    border-radius: 6px;
    font-variant-numeric: tabular-nums;
    white-space: nowrap;
  }
  .score-small {
    padding: 0.15rem 0.5rem;
    font-size: 0.85rem;
  }
  .score-large {
    padding: 0.3rem 0.75rem;
    font-size: 1.25rem;
  }
</style>
